<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config title="菜单管理" base="/core/wechatmenu/" xtype="uxtreegrid" displayfield="descZhCn"/>
	<gantmodule>
		<module xtype="uxtreegrid" headerModule="TMW_WECHAT_ROLE" title="角色组授权" module="role"/>
	</gantmodule>
	<form>
		<column xtype="textfield" fieldLabel="事务代码" name="workCode"/>
		<column xtype="textfield" fieldLabel="菜单名称" name="descZhCn" allowBlank="false"/>
		<column xtype="textfield" fieldLabel="菜单名称" name="descEnUs" hidden="true"/>
		<column xtype="textfield" fieldLabel="菜单名称" name="descZhTw" hidden="true"/>
		<column xtype="textfield" fieldLabel="菜单地址" name="url"/>
		<column xtype="textfield" fieldLabel="父角色" name="parent.id"/>
		<column xtype="numberfield" fieldLabel="排序" name="orderBy" allowBlank="false"/>
		<column xtype="textfield" fieldLabel="图片地址" name="pic"></column>
		<column xtype="textfield" fieldLabel="点击事件" name="bindtap"></column>
		<column xtype="numberfield" fieldLabel="叶子节点" name="leaf" hidden="true"/>
		<column xtype="numberfield" fieldLabel="是否展开" name="expanded" hidden="true"/>
		<column xtype="fieldset" title="系统信息">
			<column xtype="textfield" fieldLabel="UUID" name="id"  readOnly="true" fieldStyle="background:#E6E6E6"/>
			<column xtype="textfield" fieldLabel="创建人" name="createUser"  readOnly="true" fieldStyle="background:#E6E6E6"/>
			<column xtype="datefield" fieldLabel="创建时间" name="createTime" format="Y-m-d H:i:s" fieldStyle="background:#E6E6E6" readOnly="true"/>
			<column xtype="textfield" fieldLabel="更新人" name="updateUser"  readOnly="true" fieldStyle="background:#E6E6E6"/>
			<column xtype="datefield" fieldLabel="更新时间" name="updateTime" format="Y-m-d H:i:s" fieldStyle="background:#E6E6E6" readOnly="true"/>
		</column>
	</form>
	<search>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
				<column xtype="textfield" fieldLabel="中文描述" name="descZhCn"/>
			</column>
		</column>
	</search>
	<head>
		<column xtype="rownumberer" width="30" align="right"/>
		<column xtype="treecolumn" dataIndex="descZhCn" width="220" align="left" text="中文描述"/>
		<column dataIndex="url" flex="1" text="菜单地址"/>
		<column dataIndex="workCode" text="事务代码"  width="80"/>
		<column dataIndex="orderBy" text="排序" align="right" width="40"/>
		<column xtype="actioncolumn" width="48" align="center" text="操作">
			<item icon="/resources/images/73.png" tooltip="编辑" handler="itemEditButtonClick"/>
			<item icon="/resources/images/77.png" tooltip="授权" handler="itemEditButtonClick2"/>
		</column>
		<column dataIndex="createTime" xtype="datecolumn" width="140" align="center" text="创建时间" format="Y-m-d H:i:s"/>
		<column dataIndex="updateTime" xtype="datecolumn" width="140" align="center" text="更新时间" format="Y-m-d H:i:s"/>
	</head>
	<sql vname="WECHAT_MENU">
	<![CDATA[select a.* from WECHAT_MENU a  start with a.id ='root' connect by prior a.id=a.pid order siblings by order_by ]]>
	</sql>
</grid>