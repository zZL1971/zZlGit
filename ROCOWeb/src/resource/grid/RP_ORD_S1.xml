<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config title="市场-未打款报表" xtype="uxgrid" curd="RE"/>
	<search>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
					<column xtype="tablecombobox" fieldLabel="经销商编码" name="shouDaFang" table="cust_header" dataid="kunnr" datatext="name1" width="250"  showKey="true"/>
					<column xtype="dictcombobox" fieldLabel="省份" name="regio" dict="KUNNR_REGION" />
					<column xtype="textfield" fieldLabel="店名" name="name1"	/>
			</column>
		</column>
	</search>
	<head>
		<column xtype="rownumberer" width="30" align="right" />
		<column dataIndex="shouDaFang" width="100" align="left" text="售达方" />
		<column dataIndex="vkbur" width="100" align="left" text="部门" />
		<column dataIndex="vkgrp" width="100" align="left" text="区域" />
		<column dataIndex="regio" width="100" align="left" text="省份编码" />
		<column dataIndex="province" width="100" align="left" text="省份"/>
		<column dataIndex="name1" width="100" align="left" text="店名"/>
		<column dataIndex="total" width="100" align="right" text="付款金额"/>
	</head>
	<sql vname="RP_ORD_S1">
	<![CDATA[ select t.shou_da_fang,
       ch.vkbur,
       ch.vkgrp,
       ch.regio,
       (select s.desc_zh_cn
          from sys_data_dict s
         where s.key_val = ch.regio
           and s.trie_id = 'BpW3Q8eTaZEHmgfd8f7WeX') as province,
       ch.name1,
       t.total
  from (select sh.shou_da_fang, sum(sh.order_total) total
          from sale_header sh
         where sh.id in
               (select id
                  from act_ct_mapping acm
                 where acm.procinstid in
                       (select ar.proc_inst_id_
                          from act_ru_task ar
                         where ar.name_ in ('客户确认', '确认报价')))
           and sh.is_yp = '0'
           and sh.order_type != 'OR4'
         group by sh.shou_da_fang) t
 ,  cust_header ch
    WHERE ch.kunnr = t.shou_da_fang
    AND CH.VTWEG<>'02'
   and ch.row_status = '1'
                          ]]>
	</sql>
</grid>