<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config title="修改订单价格流水" base="/main/sd/pr/" xtype="uxgrid" curd="CRDE" controllers="spm.SalePrModController" formView="SMSWeb.view.spm.SalePrModView"/>
	<search>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
				<column xtype="textfield" fieldLabel="订单号" name="bstkd"/>
				<column xtype="textfield" fieldLabel="SAP编号" name="vbeln"/>
				<column xtype="tablecombobox" fieldLabel="售达方" name="kunnr" table="cust_header" dataid="kunnr" datatext="name1" showKey="true"/>
			</column>
		</column>
	</search>
	<head>
		<column xtype="rownumberer" width="30" align="right"/>
		<column xtype="actioncolumn" width="48" align="center" text="操作">
			<item icon="/resources/images/look.png" tooltip="查看" handler="itemEditBtnClk"/>
		</column>
		<column dataIndex="id" width="140" align="left" hidden="true" text="ID">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="bstkd" width="140" align="left" text="订单号">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="vbeln" width="140" align="left" text="SAP编号">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="auart" width="80" align="center" text="订单类型">
			<editor xtype="dictcombobox" dict="ORDER_TYPE" editable="false"/>
		</column>
		<column dataIndex="bstdk" xtype="datecolumn" width="100" align="center" text="订单日期" format="Y-m-d"></column>
		<column dataIndex="kunnr" width="70" align="center"  text="售达方" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="name1" width="80" align="left"  text="售达方名称" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="netwr" width="100" align="right" text="订单总金额" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="Double"/>
		</column>
		<column dataIndex="zterm" width="100" align="center"  text="付款条件" filterable="true">
			<editor xtype="dictcombobox" dict="FU_FUAN_COND" editable="false"/>
		</column>
		<column dataIndex="fuFuanMoney" width="100" align="right" text="付款金额" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="Double"/>
		</column>
		<column dataIndex="oFuFuanMoney" width="100" align="right" text="付款原金额" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="Double"/>
		</column>
		<column dataIndex="zzysfg" width="100" align="center"  text="支付方式" filterable="true">
			<editor xtype="dictcombobox" dict="PAY_TYPE" editable="false"/>
		</column>
		<column dataIndex="zzname" width="80" align="center"  text="客户名称" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="zzphon" width="100" align="center"  text="联系方式" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="tranState" width="80" align="center"  text="更改方" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="createUser" width="80" align="center"  text="更改人" filterable="true">
			<editor xtype="textfield" selectOnFocus="true"/>
			<filter type="string"/>
		</column>
		<column dataIndex="createTime" xtype="datecolumn" width="140" align="center" text="更改时间" format="Y-m-d H:i:s"/>
	</head>
	<sql vname="SALE_PR_MOD_LOG">
	<![CDATA[select * from sale_pr_mod_header where 1=1 order by create_time desc]]>
	<format name="bstdk" dateFormat="yyyy-MM-dd"/>
	</sql>
</grid>