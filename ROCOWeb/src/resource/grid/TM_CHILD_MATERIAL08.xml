<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config curdtname="IMOS_IDBEXT" updatedesc="orderid,id,typ" isPage="false" insertRow="parentid,orderid,typ,name2,cnt" needLog="true"/>
	<validations>
		<column field="id" regexp="presence"/>
		<column field="articleId" regexp="presence"/>
		<column field="name2" regexp="presence"/>
		<column field="parentid" regexp="presence"/>
		<column field="info1" regexp="startAG6"/>
	</validations>
	<head>
		<column xtype="rownumberer" width="40" align="right"/>
		<column text="编号" dataIndex="id" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="物料编码" dataIndex="articleId" width="120" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="名称" dataIndex="name2" width="200" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		
		<column text="数量" dataIndex="cnt" width="60" align="right">
		</column>
		
		<column text="父编号" dataIndex="parentid" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="订单编号" dataIndex="orderid" width="150" align="left" hidden="true"/>
		<column text="类型" dataIndex="typ" width="40" align="left" hidden="true"/>
		<column text="识别码" dataIndex="info1" width="60" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
	</head>
	<sql vname="tree_material08">
	<![CDATA[select id,parentid,orderid,typ,name2,cnt,article_id,info1 from IMOS_IDBEXT where typ='8']]>
	</sql>
</grid>