<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config curdtname="IMOS_IDBEXT" updatedesc="orderid,id" isPage="false" insertRow="orderid,typ,parentid,name,thickness,cthickness,width,cwidth,length,clength,cnt,matname,info1,idSerie,grid,info4"/>
	<head>
		<column xtype="rownumberer" width="40" align="right"/>
		<column xtype="actioncolumn" width="40" align="center" text="操作" hidden="true" hideable="false">
			<item icon="/resources/images/remarks1.png" tooltip="编辑" handler="itemEditButtonClick"/>
		</column>
		<column text="名称" dataIndex="name" width="170" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="开料厚度" dataIndex="cthickness" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="开料宽度" dataIndex="cwidth" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="开料长度" dataIndex="clength" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		
		
		<column text="数量" dataIndex="cnt" width="60" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="原材料描述" dataIndex="matname" width="150" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="完工厚度" dataIndex="thickness" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="完工宽度" dataIndex="width" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="完工长度" dataIndex="length" width="80" align="right">
			<editor xtype="numberfield" selectOnFocus="true"/>
		</column>
		<column text="工艺路线" dataIndex="idSerie" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		
		<column text="纹理" dataIndex="grid" width="50" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		
		<column text="信息A" dataIndex="info2" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="信息B" dataIndex="info3" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="信息C" dataIndex="info4" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="信息D" dataIndex="idText" width="80" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="SURFTNAM" dataIndex="surftnam" width="150" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		
		<column text="识别码" dataIndex="info1" width="60" align="left">
			<editor xtype="textfield" selectOnFocus="true"/>
		</column>
		<column text="订单编号" dataIndex="orderid" hidden="true" width="100" align="left" />
		<column text="类型" dataIndex="typ" hidden="true" width="40" align="left" />
	</head>
	<sql vname="show_material07">
	<!-- 移门	A、	TYP=3 且 标识码= G*
 A、	取出移门线的板件 
	 -->
	<![CDATA[select SUM(cnt) AS CNT,orderid,typ,name,cthickness,clength,cwidth,length,width,thickness,id_Serie,info1,matname,surftnam,grid,
           id_Text, 
           info2,
           info3,
           info4 from IMOS_IDBEXT where info1 like 'G%' AND TYP = '3' 
                      and not (width=0 and matname like '小美装饰条%') and info1 not in ('CG01','CG02','CG03')
	GROUP BY orderid,typ,name,cthickness,clength,cwidth,length,width,thickness,id_Serie,info1,matname,surftnam,grid,
           id_Text, 
           info2,
           info3,
           info4 order by info1  ]]>
	</sql>
</grid>