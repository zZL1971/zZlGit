<?xml version="1.0" encoding="UTF-8"?>
<grid>
	<config title="操作频率报表" base="/main/sd/pr/" xtype="uxgrid" curd="RE" />
	<search>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
				<column xtype="textfield" fieldLabel="查询年份" name="requestYear" />
				<column xtype="textfield" fieldLabel="查询月份" name="requestMonth" />
				<column xtype="textfield" fieldLabel="查询日" name="requestDay" />
				<column xtype="textfield" fieldLabel="操作人" name="userName" />
			</column>
		</column>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
				<column xtype="textfield" fieldLabel="IP地址" name="na"  />
				<column xtype="textfield" fieldLabel="角色" name="role" />
				<column xtype="textfield" fieldLabel="访问地址" name="url" />
			</column>
		</column>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox"> 
				<column xtype="textfield" fieldLabel="平均频率从" name="avgReqFreq" />
				<column xtype="textfield" fieldLabel="到" name="avgReqFreq" />
				<column xtype="textfield" fieldLabel="最小频率从" name="minReqFreq" />
				<column xtype="textfield" fieldLabel="到" name="minReqFreq" />
			</column>
		</column>
		<column layout="hbox" xtype="fieldcontainer">
			<column xtype="container" flex="1" layout="hbox">
				<column xtype="textfield" fieldLabel="最大频率从" name="maxReqFreq" />
				<column xtype="textfield" fieldLabel="到" name="maxReqFreq" />
			</column>
		</column>
	</search>
	<head>
		<column xtype="rownumberer" width="30" align="right" />
		<column dataIndex="userName" width="150" align="left" text="操作人" />
		<column dataIndex="role" width="120" align="left" text="角色" />
		<column dataIndex="actName" width="100" align="left" text="节点名称" />
		<column dataIndex="url" width="300" align="left" text="访问地址" />
		<column dataIndex="na" width="120" align="center" text="IP" />
		<column dataIndex="requestYear" width="80" align="center" text="操作年份" />
		<column dataIndex="requestMonth" width="70" align="center" text="操作月份" />
		<column dataIndex="requestDay" width="60" align="center" text="操作日" />
		<column dataIndex="avgReqFreq" width="80" align="right" text="平均频率" xtype="numbercolumn" format="0.00"/>
		<column dataIndex="minReqFreq" width="80" align="right" text="最小频率" xtype="numbercolumn" format="0.00"/>
		<column dataIndex="maxReqFreq" width="80" align="right" text="最大频率" xtype="numbercolumn" format="0.00"/>
		<!--<column dataIndex="sessionId" width="120" align="left" text="sessionId"/> -->
	</head>
	<sql vname="RP_REQ_LOG">
	<![CDATA[ select * from sys_request_log_view where 1=1  ]]>
	</sql>
</grid>